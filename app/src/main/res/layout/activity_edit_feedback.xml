<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditFeedbackActivity">

    <TextView
        android:id="@+id/editFeedbackTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Muokkaa palautetta"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TitleEditWriter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kirjoittaja"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editWriter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/TitleEditFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Palaute"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonSaveEditedFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="saveChanges"
        android:text="@string/save_changes" />
</LinearLayout>